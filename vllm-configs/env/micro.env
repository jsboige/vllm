# Fichier env/micro.env

# Paramètres propres à l'instance micro
CONTAINER_NAME=vllm_micro
MODEL_NAME=Zenabius_Qwen2.5-3B-Instruct-exl2
DATATYPE=auto
NUM_GPUS=1
GPU_MEMORY_UTILIZATION=0.9
MAX_MODEL_LEN=30000

# Paramètres essentiels vLLM
HUGGING_FACE_HUB_TOKEN=YOUR_HUGGING_FACE_TOKEN_HERE
VLLM_API_KEY=KEY_REMOVED_FOR_SECURITY
TZ=Europe/Paris
PORT=7860

# Répertoires (adaptez selon vos chemins sous WSL)
HOME=\\wsl.localhost\Ubuntu\home\jesse\vllm\

# Optimisations optionnelles
ENABLE_CHUNKED_PREFILL=true
MAX_NUM_BATCHED_TOKENS=2048

# Configuration du GPU (ici, sur le GPU 0)
DEVICE_IDS=0
